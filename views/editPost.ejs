<%- include('../partials/header') %>
<div class="container mx-auto w-25 " id="editPostForm">

  
    <h1>Edit Blog   <%=post.id%></h1>
   
    <form method="POST" action="/update/<%= post.id%>?_method=PUT">
       <div class="form-group mb-3">
        <textarea class="form-control rounded" rows="5" name="memory" id="memory" placeholder="any memory"><%= post.memory  %></textarea>
       </div>
       <div class="form-group mb-3">
        <input class="form-control rounded" type="text" alt="image" id="img" name="img" placeholder="insert an image link" value="<%= post.img %>">
       </div>
       <div class="form-group mb-3 d-flex justify-content-center">
        <input class="form-control rounded btn btn-success btn-sm" type="submit" value="Submit">
       </div>
        
</div>
<%- include('../partials/footer') %>