<%- include('../partials/header') %>
<div class="container mx-auto w-25 ">

  
    <h1>Edit Blog (Partially) </h1>
   
    <form method="POST" action="/update/<%= user.id%>?_method=PATCH">
       <div class="form-group mb-3">
        <textarea class="form-control rounded" rows="5" name="memory" id="memory" placeholder="any memory"><%= user.memory  %></textarea>
       </div>
       <div class="form-group mb-3">
        <input class="form-control rounded" type="text" alt="image" id="img" name="img" placeholder="insert an image link" value="<%= user.img %>">
       </div>
       <div class="form-group mb-3 d-flex justify-content-center">
        <input class="form-control rounded btn btn-success btn-sm" type="submit" value="Submit">
       </div>
        
</div>
<%- include('../partials/footer') %>