<%- include('../../partials/header') %>
<div class="container mx-auto" id="loginForm">
    <h1>USER login</h1>
    <form action="/user/login" method="post">
     
       <div class="form-group mb-3">
        <input class="form-control rounded" required type="email" alt="email" id="email" name="email" placeholder="type your email please !">
       </div>

       <div class="form-group mb-3">
        <input class="form-control rounded" required type="password" alt="password" id="password" name="password" placeholder="type your password please !">
       </div>

       <div class="form-group mb-3 d-flex justify-content-center">
        <input required class="form-control rounded btn btn-success btn-sm" type="submit" value="Submit">
       </div>
    </form>
       <a class="nav-link" href="/users/signup">Sign up!</a>
        
</div>
   
        



