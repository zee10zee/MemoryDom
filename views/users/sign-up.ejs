<%- include('../../partials/header') %>
<div class="container  mx-auto" id="signUpForm" >
    <% if(userExistMsg){ %>
        <h3 id="userExist" class="alert alert-danger"> <%= userExistMsg %></h3>
        <script>
            setTimeout(() => {
               const existUser = document.getElementById('userExist')
               if(existUser) existUser.style.display = "none"
            }, 3000);
         </script>
        <% } %>
     
    <h1>USER SIGN UP </h1>
    <form  id="signUpForm" action="/users/signup" method="post" enctype="multipart/form-data" >
   
        <div class="form-group mb-3 d-flex align-items-center ">
            <div class="form-group " style="width: 80%;">
                <input class="form-control rounded" type="text" name="fname" id="fname" placeholder="your name">
            </div>
         
            <div class="div mx-2 ml-auto" style="width: 20%;">
                <label for="cameraBtn"> Profile pic</label>
                <img src="/images/profilePic.jpg" class="cameraBtn ms-auto" id="cameraBtn">
           </div>
        </div>
            <input class="rounded" type="file" autofocus  name="image" id="img" required style="display: none; width: 0;">
        
       <div class="form-group mb-3">
        <input class="form-control rounded" type="text" name="lname" id="lname" placeholder="your last name">
       </div>
     
       <div class="form-group mb-3">
        <input class="form-control rounded" autocomplete="on" type="email" alt="email" id="email" name="email" placeholder="type your email please !">
       </div>

       <div class="form-group mb-3">
        <input class="form-control rounded" type="password" autocomplete="off" alt="password" id="password" name="password" placeholder="type your password please !">
       </div>

       <div class="form-group mb-3 d-flex justify-content-center">
        <input class="form-control rounded btn btn-success btn-sm" type="submit" value="Submit">
       </div>
  
    </form>
    <a class="nav-link nav-item" href="/login">already signed up ?Log in</a>
</div>


    <%- include('../../partials/footer') %>
